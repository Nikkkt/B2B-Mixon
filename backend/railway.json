{
  "build": {
    "builder": "NIXPACKS",
    "rootDirectory": "backend",
    "buildCommand": "dotnet publish -c Release -o out",
    "env": {
      "NIXPACKS_POST_INSTALL": "curl -sSL https://dot.net/v1/dotnet-install.sh -o /tmp/dotnet-install.sh && bash /tmp/dotnet-install.sh --version 9.0.308 --install-dir /opt/dotnet && ln -sf /opt/dotnet/dotnet /usr/local/bin/dotnet"
    }
  },
  "deploy": {
    "startCommand": "dotnet out/backend.dll"
  }
}